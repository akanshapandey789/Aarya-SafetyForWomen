<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3CFF1645"
    tools:context=".SplashActivity">


    <TextView
        android:id="@+id/sparkText"
        android:layout_width="wrap_content"
        android:layout_height="93dp"
        android:layout_above="@id/sparkImg"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="47dp"
        android:fontFamily="@font/charm_bold"
        android:gravity="center_horizontal"
        android:text="Aarya~SafetyForWomen"
        android:textColor="#AA3974"
        android:textSize="35sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/sparkImg"
        android:layout_width="700px"
        android:layout_height="700px"
        android:layout_centerVertical="true"
        android:layout_marginStart="50dp"
        android:paddingStart="30dp"
        android:src="@drawable/women_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/slang"
        android:layout_below="@id/sparkImg"
        android:text="Together, Let's Create a Safer World for All"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get started"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnGetStarted"
        android:layout_marginTop="40px"
        android:layout_below="@id/slang"/>



</RelativeLayout>